<Page
    x:Class="GuessMate.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GuessMate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Height="150"
            Margin="0,0,10,10"
            CornerRadius="8">
            <Border.Background>
                <ImageBrush
                    ImageSource="/Assets/AppHeader.jpg"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Stretch="UniformToFill" />
            </Border.Background>
            <Grid>
                <StackPanel
                    Margin="30,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent">
                    <ui:TextBlock
                        FontTypography="Title"
                        Foreground="#FFFFFF"
                        Text="Welcome to GuessMate!" />
                    <ui:TextBlock
                        FontTypography="Subtitle"
                        Foreground="#B7FFFFFF"
                        Text="Your favorite Wordle companion." />
                    <ui:TextBlock
                        FontTypography="BodyStrong"
                        Foreground="#B7FFFFFF"
                        Text="Guess smarter, not harder." />
                </StackPanel>
                <StackPanel
                    Margin="0,0,10,30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <ui:TextBlock
                        Margin="0,0,5,0"
                        FontTypography="Caption"
                        Foreground="#57FFFFFF"
                        Text="Created by :" />
                    <Border
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        CornerRadius="10">
                        <Border.Background>
                            <ImageBrush
                                ImageSource="/Assets/YoqziiLogo.png"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>
                    <ui:TextBlock
                        FontTypography="Caption"
                        Foreground="#57FFFFFF"
                        Text="yoqzii." />
                </StackPanel>
                <ui:Image
                    Width="50"
                    Height="50"
                    Margin="0,25,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Assets/GuessMateLogoNoBG.png" />
            </Grid>
        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Width="250"
            Margin="10,0,0,10"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                <ui:TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontTypography="Subtitle"
                    Text="Today's Wordle" />
                <ui:TextBlock
                    Margin="0,30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontTypography="TitleLarge"
                    FontWeight="Bold"
                    Text="{Binding ViewModel.WordleNumberDisplay}" />
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,10,10,20"
            Height="200"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel Margin="20" VerticalAlignment="Stretch">
                <ui:TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontTypography="Subtitle"
                    Text="Solution" />
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBox
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        IsEnabled="{Binding ViewModel.IsRevealed}"
                        IsReadOnly="True"
                        Text="{Binding ViewModel.WordleSolution}" />
                    <ui:Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Appearance="Caution"
                        Command="{Binding ViewModel.RevealSolutionCommand}"
                        Content="Reveal/Hide"
                        Icon="{ui:SymbolIcon Symbol=Eye24}" />
                </Grid>
                <ui:TextBlock
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontTypography="Subtitle"
                    Text="Wordle's Editor" />
                <ui:TextBox
                    Margin="0,5,0,0"
                    IsReadOnly="True"
                    Text="{Binding ViewModel.WordleEditor}" />
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Grid.Column="1"
            Margin="10,10,0,20"
            Padding="20"
            Height="200"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            CornerRadius="8">
            <wv2:WebView2 Source="{Binding ViewModel.WordleReviewURL}"/>
        </Border>
    </Grid>
</Page>