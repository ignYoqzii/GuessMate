<Page
    x:Class="GuessMate.Views.Pages.SolverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GuessMate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:GuessMate.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:SolverPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="0,0,10,20"
            Padding="10"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">

            <!--  Viewbox scales the board to fill the border  -->
            <Viewbox Stretch="Uniform">
                <ItemsControl ItemsSource="{Binding ViewModel.Board}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Letters}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="5" Rows="1" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="60"
                                            Height="60"
                                            Margin="4"
                                            Background="{Binding Color, Converter={StaticResource LetterColorConverter}}"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                            <ui:TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Text="{Binding Character}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </Border>

        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ui:AutoSuggestBox
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Icon="{ui:SymbolIcon Search24}"
                OriginalItemsSource="{Binding ViewModel.PossibleWords, Mode=OneWay}"
                PlaceholderText="Search..." />
            <ui:Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,0,0"
                Appearance="Primary"
                Command="{Binding ViewModel.UpdatePossibleWordsListCommand}"
                Content="Refresh"
                Icon="{ui:SymbolIcon Symbol=ArrowSync24}" />
            <ui:TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,10"
                FontTypography="BodyStrong"
                Text="Possible Words" />
        </Grid>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,0,0,20"
            Padding="10"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <ui:ListView Grid.Column="1" ItemsSource="{Binding ViewModel.PossibleWords}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <ui:TextBlock Margin="8,2" Text="{Binding}" />
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Border>
    </Grid>
</Page>
